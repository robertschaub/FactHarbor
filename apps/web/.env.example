# FactHarbor Environment Variables
# These values must match the API configuration in appsettings.Development.json

# API Configuration
FH_API_BASE_URL=http://localhost:5000

# Keys for internal calls
FH_ADMIN_KEY=DEV_SHARED_SECRET_ADMIN_KEY
FH_INTERNAL_RUNNER_KEY=DEV_SHARED_SECRET_RUNNER_KEY

# LLM Provider Configuration
# Set one of these based on which LLM provider you want to use
# LLM_PROVIDER=openai
LLM_PROVIDER=anthropic
# LLM_PROVIDER=google
# LLM_PROVIDER=mistral
OPENAI_API_KEY=PASTE_YOUR_KEY_HERE
ANTHROPIC_API_KEY=PASTE_YOUR_KEY_HERE
GOOGLE_GENERATIVE_AI_API_KEY=PASTE_YOUR_KEY_HERE
MISTRAL_API_KEY=PASTE_YOUR_KEY_HERE

# LLM fallback order (comma-separated)
# FH_LLM_FALLBACKS=openai,anthropic,google,mistral

# Report generation
# FH_REPORT_STYLE=structured
FH_REPORT_STYLE=rich
FH_ALLOW_MODEL_KNOWLEDGE=true

# Source bundle (DISABLED - see Docs/Source Reliability Bundle.md)
# FH_SOURCE_BUNDLE_PATH=./source-bundle.json
# FH_SOURCE_BUNDLE_MAX_SOURCES=6
# FH_SOURCE_BUNDLE_EXCERPT_CHARS=1200

# Web search (optional, SerpAPI)
FH_SEARCH_PROVIDER=auto
# FH_SEARCH_PROVIDER=serpapi
# FH_SEARCH_PROVIDER=google-cse
FH_SEARCH_ENABLED=true
# FH_SEARCH_QUERY=
FH_SEARCH_MAX_RESULTS=6
# FH_SEARCH_DOMAIN_WHITELIST=who.int,cdc.gov,nih.gov,ec.europa.eu,oecd.org,worldbank.org,reuters.com,apnews.com,bbc.com
# FH_SEARCH_DOMAIN_WHITELIST=who.int,cdc.gov,nih.gov,ec.europa.eu,oecd.org,worldbank.org,imf.org,un.org,unhcr.org,icao.int,imo.org,interpol.int,justice.gov,gov.br,stf.jus.br,tse.jus.br,stj.jus.br,planalto.gov.br,reuters.com,apnews.com,bbc.com,aljazeera.com,ft.com,theguardian.com,wsj.com,nytimes.com,washingtonpost.com,lemonde.fr,elpais.com,spiegel.de,nature.com,science.org,nejm.org,thelancet.com,arxiv.org,hrw.org,amnesty.org,icg.org,transparency.org
SERPAPI_API_KEY=PASTE_YOUR_KEY_HERE
GOOGLE_CSE_API_KEY=PASTE_YOUR_KEY_HERE
GOOGLE_CSE_ID=PASTE_YOUR_CSE_ID

FH_SOURCE_BUNDLE_PATH=./source-bundle.json